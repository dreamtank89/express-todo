<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Todos</title>
    </head>
    <body>
        <h1>Todo List Express</h1>
        <hr />
        <ul>
            <% todos.forEach((todo) => { %>
            <li><a href="/todos/<%= todo.id %>"><%= todo.title %></a></li>
            <% }); %>
        </ul>
        <br />
        <hr />

        <form action="/todos" method="POST">
            <input
                type="text"
                name="title"
                placeholder="Insert new todo task"
            />
            <button type="submit">Add Task</button>
        </form>
    </body>
</html>
