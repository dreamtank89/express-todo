<body>
    <nav>
        <div class="navbar bg-neutral text-neutral-content">
            <a class="btn btn-ghost normal-case text-xl">Todo List</a>
        </div>
    </nav>
    <section>
        <div class="hero bg-base-200">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Todo List</h1>
                    <p class="py-6">
                        Track al of your activity to be more productive
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="my-6 gap-3">
            <form
                class="flex flex-row justify-center"
                action="/todos"
                method="POST"
            >
                <input
                    type="text"
                    placeholder="Add task here"
                    name="title"
                    class="input input-bordered input-primary w-full max-w-xs"
                />
                <button class="mx-2 btn btn-primary" type="submit">
                    Add Task
                </button>
            </form>
        </div>
    </section>

    <section>
        <div class="overflow-x-auto mx-4 my-6">
            <table class="table">
                <!-- head -->
                <thead>
                    <tr>
                        <th>
                            <label>
                                <input type="checkbox" class="checkbox" />
                            </label>
                        </th>
                        <th>Id</th>
                        <th>Task Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% todos.forEach((todo) => { %>
                    <tr>
                        <th>
                            <label>
                                <input type="checkbox" class="checkbox" />
                            </label>
                        </th>
                        <td>
                            <div class="flex items-center space-x-3">
                                <p><%= todo.id %></p>
                            </div>
                        </td>
                        <td>
                            <a href="/todos/id/<%= todo.id %>"
                                ><%= todo.title %></a
                            >

                            <br />
                        </td>
                        <td><%= todo.completed %></td>
                        <th>
                            <a
                                role="button"
                                class="btn btn-outline btn-sm"
                                href="/todos/id/<%= todo.id %>"
                                >Edit</a
                            >

                            <div class="flex gap-3">
                                <form
                                    action="/todos/delete/id/<%= todo.id %>"
                                    method="POST"
                                >
                                    <input
                                        type="hidden"
                                        name="id"
                                        value="<%- todo.id %>"
                                    />
                                    <button type="submit">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="15"
                                            height="15"
                                            viewBox="0 0 27 27"
                                            fill="currentColor"
                                            class="w-6 h-6"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.5 4.478v.227a48.816 48.816 0 013.878.512.75.75 0 11-.256 1.478l-.209-.035-1.005 13.07a3 3 0 01-2.991 2.77H8.084a3 3 0 01-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 01-.256-1.478A48.567 48.567 0 017.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 013.369 0c1.603.051 2.815 1.387 2.815 2.951zm-6.136-1.452a51.196 51.196 0 013.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 00-6 0v-.113c0-.794.609-1.428 1.364-1.452zm-.355 5.945a.75.75 0 10-1.5.058l.347 9a.75.75 0 101.499-.058l-.346-9zm5.48.058a.75.75 0 10-1.498-.058l-.347 9a.75.75 0 001.5.058l.345-9z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </th>
                    </tr>
                    <% }); %>
                </tbody>
                <!-- foot -->
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Id</th>
                        <th>Task Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </section>
    <footer class="footer p-10 bg-neutral text-neutral-content">
